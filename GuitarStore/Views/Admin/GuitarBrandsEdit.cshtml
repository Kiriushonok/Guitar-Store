@model GuitarBrand
@{
    string strTitle = "Редактировать бренд";
    ViewBag.Title = strTitle;
}

<main>
    <div class="form-container">
        <h2>@strTitle</h2>
        <form id="brandForm" asp-area="" asp-controller="Admin" asp-action="GuitarBrandsEdit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateCreated" />

            <div id="errorSummary" class="text-danger" style="margin-bottom: 10px;"></div>

            <div class="form-group">
                <label asp-for="BrandName"></label>
                <input asp-for="BrandName" id="BrandName" />
                <span id="brandNameError" class="text-danger"></span>
            </div>

            <button type="submit" value="Сохранить">Сохранить</button>
        </form>
    </div>
</main>

<script src="~/js/brandValidation.js" asp-append-version="true"></script>